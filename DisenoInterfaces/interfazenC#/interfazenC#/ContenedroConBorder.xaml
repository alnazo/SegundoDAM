<Window x:Class="interfazenC_.ContenedroConBorder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:interfazenC_"
        mc:Ignorable="d"
        Title="ContenedroConBorder" Height="232" Width="800">
    <Grid>
        <Border Padding="15" Background="LightBlue">
            <StackPanel Background="White">
                <TextBlock HorizontalAlignment="Center" FontSize="42">Alignement, Margin and Padding Sample</TextBlock>

                <Button HorizontalAlignment="Left" Width="100" Height="25" Margin="20">Button 1</Button>
                <Button HorizontalAlignment="Right" Width="100" Height="25" Margin="10">Button 2</Button>
                <Button HorizontalAlignment="Stretch" Margin="0" >Button 3</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
