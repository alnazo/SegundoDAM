<Window x:Class="interfazenC_.ContenedorGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:interfazenC_"
        mc:Ignorable="d"
        Title="ContenedorGrid" Height="320" Width="469">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="120" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="124" />
            <ColumnDefinition Width="272" />
            <ColumnDefinition Width="73" />
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Background="LightGreen" Margin="20, 10, 20, 50">HOLA</Button>
        <Button Grid.Column="0" Grid.Row="2">HOLA</Button>
        <Button Grid.Column="1" Grid.Row="1" Background="MediumPurple" Margin="80, 30">HOLA</Button>
        <Button Grid.Column="2" Grid.Row="1" Background="Orange" Margin="10, 30">HOLA</Button>

        <Ellipse Grid.Column="2" Grid.Row="0" Fill="Blue" Margin="5, 25, 30, 25" />
