<Window x:Class="interfazenC_.bindingTextBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:interfazenC_"
        mc:Ignorable="d"
        Title="bindingTextBox" Height="450" Width="800">
    <Grid>
        <TextBox Name="TextInput" FontSize="16" Height="50" Margin="47,32,61,356"/>
        <TextBlock FontSize="16" HorizontalAlignment="Left" Margin="66,154,0,0" TextWrapping="Wrap" 
            Text="{Binding ElementName=TextInput, Path=Text, Mode=TwoWay}"
            VerticalAlignment="Top" Height="63" Width="654" FontWeight="Bold"/>
    </Grid>
</Window>
